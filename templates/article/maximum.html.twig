{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body  %}
    {# description contenu du stylesheet avec un lien boostrap #}
    <h1 class="text-center my-5">Recherche du Maximum</h1>

    {% set tabNbre = pairsImpairs %}

    {#affichage du plus grand nbre de mon tableau  DEBUT#}
    <div class="d-flex justify-content-between ml-5 mt-2">
        <div class="w-50">

            <div class="d-flex mt-2">
                <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Plus grand nombre </span>
                <span class="d-inline-block mx-2 text-center  text-primary ">=></span>
                <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ max(tabNbre) }}</span>
            </div>

        </div>
        <div class="w-50">

            <div class="d-flex mt-2">
                <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Valeur al√©atoire </span>
                <span class="d-inline-block mx-2 text-center  text-primary ">=></span>
                <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ random(tabNbre) }}</span>
            </div>

        </div>

    </div>
    {#FIN#}



    <div
            id="vote" class="text-center pt-5 mt-5">
        <h5  class="d-block text-primary  w-25 mb-1 mx-auto font-weight-bold" >Vote</h5>
        <span id="countLike" class="btn btn-secondary" >10</span>
        <span id="like" class="btn btn-primary" >Like</span>
        <button id="add" class="btn btn-primary" type="button">+</button>
        <button id="remove"  class="btn btn-primary" type="button">-</button>
        <span  id="dislike" class="btn btn-primary" >dislike</span>
        <span id="countDislike" class="btn btn-secondary" >0</span>
    </div>

{% endblock %}