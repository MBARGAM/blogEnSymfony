{% extends 'base.html.twig' %}

{# description du contenu du titre #}
{% block title %}
    {{ titreBlog }}
{% endblock %}

{# description contenu du stylesheet avec un lien boostrap #}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{# contenu du nav  connecté  avec le nav de base.html.twig #}
{% block header %}
    <nav id="nav" class="navbar navbar-dark bg-primary mb-5">
        <ul >
            <li class="navbar-brand"><a href="#" title="accueil" class="text-white" >Accueil</a></li>
            <li class="navbar-brand"> <a href="#" title="Realisation" class="text-white" >Realisation</a> </li>
            <li class="navbar-brand"><a href="#" title="Contact" class="text-white" >Contact</a></li>
        </ul>
    </nav>
{% endblock %}

{# contenu du tableau ayant les nbres pairs et impairs connecté  avec le body de base.html.twig #}

{% block content  %}

    {# declaration de la variable contenant des tableaux pairs et impairs nb: pas d accollade pour affecter une variable a une autre #}

    {% set tabNbre = pairsImpairs %}
    {% set tabString = tabString %}


    {# boucle sur le tableau indicé #}
<span class="d-inline-block mb-1">1 - affichage du tableau de nbre </span>
    <table class="table mx-5 text-center w-75 border border-dark  ">
        <thead class="thead-dark">
            <tr >
                <th scope="col" colspan="{{ tabNbre|length }}">Tableau des nbres pairs et impairs</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for  nbre in tabNbre %}
                     <td class="border border-dark collapsed">{{ nbre }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
    <span class="d-inline-block mx-1">2 - affichage du premier élement du tableau de string  </span>


{% endblock %}

{# contenu du footer  connecté  avec le footer  de base.html.twig #}
{% block footer %}
    <div  id= "footer" class="bg-primary ">
        <h1 class="py-5 text-center text-white" > Ici nous avons le Footer </h1>
    </div>
{%  endblock %}
