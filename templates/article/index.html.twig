{% block title %}
    {{ titreBlog }}
{% endblock %}

{# description contenu du stylesheet avec un lien boostrap #}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{# contenu du nav  connecté  avec le nav de base.html.twig #}
{% block header %}

{% endblock %}

{# contenu du tableau ayant les nbres pairs et impairs connecté  avec le body de base.html.twig #}

{% block content  %}

    {# declaration de la variable contenant des tableaux pairs et impairs nb: pas d accollade pour affecter une variable a une autre #}

    {% set dateActuelle = "now"|date("d-m-Y") %}
    {% set tabNbre = pairsImpairs %}
    {% set tabString = tabString %}
    {% set taille = tabString|length %}
    {% set half = ((tabString|length)/2)|round(0,'floor') %} {# round permet d arrondir ceil cest arrondir une valeur au dessus  floor c est en dessous#}

    {# affichage du tableau de nbre DEBUT#}
    {# boucle sur le tableau indicé #}
<span class="d-inline-block mb-2 text-primary ">1 - affichage du tableau de nbre </span>
    <table class="table mx-5 text-center w-75 border border-dark  ">
        <thead class="thead-dark">
            <tr >
                <th scope="col" colspan="{{ tabNbre|length }}">Tableau des nbres pairs et impairs</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {% for  nbre in tabNbre %}
                     <td class="border border-dark collapsed">{{ nbre }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
    {#FIN#}

    {#affichage du premier élement du tableau de string DEBUT#}
    <span class="d-inline-block mt-1  text-primary ">2 - affichage du premier élement du tableau de string  </span>
    <div class="d-flex mt-2">
        <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Premier element du tableau de string </span>
        <span class="d-inline-block mx-5 text-center  text-primary ">=></span>
        <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ tabString|first }}</span>
    </div>
    {#FIN#}

    {# affichage du tableau de string DEBUT#}
    {# boucle sur le tableau indicé #}
    <span class="d-inline-block mb-2 mt-4  text-primary ">3 - affichage du tableau de string</span>
    <div class="d-flex">
        <div class="w-25 align-self-center">
            <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark ">Tableau des strings </span>
        </div>
        <span class="d-inline-block mr-5 text-center  text-primary align-self-center">=====></span>
        <div class="d-flex justify-content-around border border-dark w-50 p-2 bg-dark text-white ">
            <div class="w-auto">
                <ul>
                    {% for i in 0..(half-1)   %}
                        <li class="font-weight-bold">{{ tabString[i]|capitalize }}</li>
                    {% endfor %}

                </ul>
            </div>
            <div class="w-auto">
                <ul>
                    {% for i in half..(taille-1)  %}
                        <li class="font-weight-bold">{{ tabString[i]|capitalize }}</li>
                    {% endfor %}

                </ul>
            </div>
        </div>
    </div>
    {#FIN#}


    {#affichage du plus grand nbre de mon tableau  DEBUT#}
    <div class="d-flex justify-content-between ml-5 mt-2">
        <div class="w-50">
            <span class="d-inline-block mt-1 text-primary ">4 -  plus grand nombre </span>
            <div class="d-flex mt-2">
                <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Plus grand nombre </span>
                <span class="d-inline-block mx-2 text-center  text-primary ">=></span>
                <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ max(tabNbre) }}</span>
            </div>

        </div>
        <div class="w-50">
            <span class="d-inline-block mt-1 text-primary ">5- valeur aléatoire</span>
            <div class="d-flex mt-2">
                <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Valeur aléatoire </span>
                <span class="d-inline-block mx-2 text-center  text-primary ">=></span>
                <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ random(tabNbre) }}</span>
            </div>

        </div>

    </div>
    {#FIN#}

    {#comparaison des dates DEBUT#}
    <span class="d-inline-block mt-2 text-primary ">6- comparaison des dates</span>

    <div class="d-flex  ml-5 mt-2 mr-2">
        <div class="w-50">
            <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Date actuelle </span>
            <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ dateActuelle }}</span>
        </div>
        <div class="w-50">
            <span class="d-inline-block p-2  text-center  ml-5 text-white bg-dark w-25">Date aléatoire </span>
            <span class="d-inline-block pt-1 text-center bg-white border border-dark w-25 font-weight-bold">{{ date }}</span>
        </div>
    </div>
    <div class="w-50   mt-3 ">
        <span class="d-inline-block p-2 text-center  ml-5 text-white bg-dark w-25">Result de la comparaison </span>
         {% if dateActuelle < date %}
             <span class="d-inline-block p-2 text-center   border border-white w-50 text-white bg-danger">date actuelle inferieur à la date aléatoire</span>
         {% elseif dateActuelle > date %}
             <span class="d-inline-block p-2 text-center  border border-white w-50 text-white bg-warning">date actuelle superieure à la date aléatoire</span>
         {% else %}
             <span class="d-inline-block p-2 text-center  border border-white w-50 text-white bg-success">date actuelle égale à la date aléatoire</span>
        {% endif %}
    </div>

{% endblock %}


